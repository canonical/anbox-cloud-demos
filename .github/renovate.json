{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "schedule:earlyMondays",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    "helpers:pinGitHubActionDigestsToSemver",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "groupName": "GitHub actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}